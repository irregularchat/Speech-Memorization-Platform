# Environment variables for local development
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Django Core Configuration
SECRET_KEY=django-insecure-local-development-key-change-this-to-secure-random-string
DEBUG=True
DJANGO_SETTINGS_MODULE=speech_memorization.settings_cloud

# Database Configuration
# For local development, use SQLite
DATABASE_URL=sqlite:///db.sqlite3
# For production testing locally, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/speech_memorization

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_CLOUD_PROJECT_ID=serverless-test-12345

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://0.0.0.0:8000

# Google Cloud Settings (optional for local development)
USE_CLOUD_SQL_AUTH_PROXY=False
USE_GCS=False
GS_BUCKET_NAME=your-bucket-name

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Optional: Google Cloud credentials for local testing with actual GCP services
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Development flags
USE_CLOUD_SQL_AUTH_PROXY=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0